<!DOCTYPE html>
<html>
  <head>
    <title>Sistema de Frete</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application" %>
  </head>
  <body>
    <header>
      <%= link_to root_path do  %>
        <h1>Sistema de Frete</h1>
      <% end %>
      <nav>
        <% if user_signed_in? %>
          <%= link_to 'Tipo de Transporte', transport_types_path %>
          <%= current_user.description %>
          <%= button_to 'Sair', destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to 'Fazer login', new_user_session_path%>
        <% end %>
      </nav>
    </header>
    <main>
      <div>
        <%= notice %>
        <%= alert %>
      </div>
      <%= yield %>
    </main>
  </body>
</html>